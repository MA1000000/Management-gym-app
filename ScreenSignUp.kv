MDScreen:
    name: "screen_sign_up"

    MDFloatLayout:

        md_bg_color:1,1,1,1

        MDLabel:
            text: "H i !"
            #font_name: bold
            font_size:"26sp"
            pos_hint: {"center_x":.6,"center_y":.83}
            color:0,0,0,1

        MDLabel:
            text: "Create your new account"
            #font_name: bold
            font_size:"18sp"
            pos_hint: {"center_x":.6,"center_y":.76}
            color: 0,0,0,1

        MDTextField:
            id : first_name_sign_up
            hint_text: "First Name"
            icon_right: "account"

            size_hint_x: .85
            pos_hint: {"center_x":.5,"center_y":.65}
            font_size: "14sp"
            cursor_width: "4sp"

            multiline: False
            line_color_normal:0,0,0,1
            line_color_focus:0,0,0,1


        MDTextField:
            id : last_name_sign_up
            hint_text: "Last Name"
            icon_right: "account"

            size_hint_x: .85
            pos_hint: {"center_x":.5,"center_y":.55}
            font_size: "14sp"
            cursor_width: "4sp"

            multiline: False
            line_color_normal:0,0,0,1
            line_color_focus:0,0,0,1

        MDTextField:
            id : user_email_sign_up
            hint_text: "Email"

            icon_right: "email"
            icon_right_color:0,0,0,1
            helper_text: "example@gmail.com"
            helper_text_mode: "on_focus"
            size_hint_x: .85
            pos_hint: {"center_x":.5,"center_y":.45}
            font_size: "14sp"
            cursor_width: "2sp"

            multiline: False
            line_color_normal:0,0,0,1
            line_color_focus:0,0,0,1

        MDTextField:
            id : user_password_sign_up
            hint_text: "Password"

            size_hint_x: .85
            pos_hint: {"center_x":.5,"center_y":.35}
            font_size: "14sp"
            cursor_width: "2sp"
            icon_right: "key"

            line_color_normal:0,0,0,1
            line_color_focus:0,0,0,1
            password: True

        MDRoundFlatButton:
            text: "JOIN"
            size_hint: .65, .065
            pos_hint: {"center_x": .47,"center_y": .2}
            line_color: 0, 0, 0, 1
            text_color: "black"
            font_size: "20sp"
            bold: True
            md_bg_color: 0,0,0,0

            on_release:
                app.get_sign_up_data(first_name_sign_up.text,last_name_sign_up.text,user_email_sign_up.text,user_password_sign_up.text)



        MDLabel:
            text: "Already have an account?"
            #font_name: "bold"
            font_size: "11sp"
            pos_hint: {"center_x":.68, "center_y":.04}
            color: rgba(127,127,127,255)
        MDRaisedButton:
            text: "Log In "
            font_size: "11sp"
            pos_hint: {"center_x":.69, "center_y":.06}
            md_bg_color: rgba(127,127,127,255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "screen_log_in"
